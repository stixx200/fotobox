{
  "name": "fotobox",
  "version": "4.1.0",
  "description": "Fotobox application",
  "homepage": "",
  "author": {
    "name": "Markus Voelk",
    "email": "stixx200@gmail.com"
  },
  "keywords": [
    "angular",
    "angular 6",
    "electron",
    "typescript",
    "sass",
    "fotobox",
    "photobooth"
  ],
  "main": "src/main/main.js",
  "private": true,
  "scripts": {
    "v": "electron -v && node -v",
    "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "build": "npm run postinstall:electron && npm run electron:tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "electron:tsc": "tsc --project ./src/main/tsconfig.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
    "electron:serve:debug": "electron %NODE_DEBUG_OPTION% . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "collageMaker:cli": "npm run electron:tsc && electron src/main/tools/collageMaker-cli.js"
  },
  "pkg": {
    "targets": [
      "node8-win-x64"
    ],
    "assets": [
      "src/main/collage-maker/images/**/*"
    ]
  },
  "bin": {
    "collageMaker": "src/main/tools/collageMaker-cli.js"
  },
  "dependencies": {
    "download": "^7.1.0",
    "electron-localshortcut": "^3.1.0",
    "fs-extra": "^7.0.0",
    "logger-winston": "0.0.11",
    "node-ssdp": "^3.3.0",
    "rxjs": "6.1.0",
    "sharp": "^0.22.1",
    "superagent": "^3.8.3",
    "text-to-svg": "^3.1.3",
    "wifi-control": "^2.0.1",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.3",
    "@angular/animations": "^6.1.0",
    "@angular/cdk": "^6.4.1",
    "@angular/cli": "6.0.8",
    "@angular/common": "6.0.7",
    "@angular/compiler": "6.0.7",
    "@angular/compiler-cli": "6.0.7",
    "@angular/core": "6.0.7",
    "@angular/forms": "6.0.7",
    "@angular/http": "6.0.7",
    "@angular/language-service": "6.0.7",
    "@angular/material": "^6.4.1",
    "@angular/platform-browser": "6.0.7",
    "@angular/platform-browser-dynamic": "6.0.7",
    "@angular/router": "6.0.7",
    "@ngrx/store": "^6.0.1",
    "@ngrx/store-devtools": "^6.0.1",
    "@ngx-translate/core": "10.0.1",
    "@ngx-translate/http-loader": "3.0.1",
    "@types/jasmine": "2.8.7",
    "@types/jasminewd2": "2.0.3",
    "bootstrap": "^4.1.1",
    "codelyzer": "4.2.1",
    "core-js": "2.5.6",
    "electron": "2.0.3",
    "electron-builder": "20.14.7",
    "electron-reload": "1.2.2",
    "font-awesome": "^4.7.0",
    "hammerjs": "^2.0.8",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.0",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.1.0",
    "ngrx-store-localstorage": "^5.0.1",
    "ngx-bootstrap": "^3.0.1",
    "npm-run-all": "4.1.3",
    "npx": "10.2.0",
    "pkg": "^4.4.0",
    "protractor": "5.3.2",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "2.7.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "yargs": "^13.2.4",
    "zone.js": "0.8.26"
  }
}
