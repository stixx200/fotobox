{
  "name": "fotobox",
  "version": "5.1.0",
  "description": "Fotobox application",
  "homepage": "",
  "author": {
    "name": "Markus Voelk",
    "email": "stixx200@gmail.com"
  },
  "packageManager": "yarn@3.2.2",
  "keywords": [
    "angular",
    "electron",
    "typescript",
    "sass",
    "fotobox",
    "photobooth"
  ],
  "main": "./main/main.js",
  "private": true,
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng:build": "ng build --base-href ./",
    "ng:watch": "yarn run ng:build -c dev --watch",
    "start:local:watch": "yarn run build:dev && npm-run-all -p build:watch 'electron dist/main'",
    "build": "yarn run electron:tsc && ng build --base-href ./",
    "build:dev": "yarn run build -c dev",
    "build:watch": "yarn run build:dev --watch",
    "build:prod": "yarn run build -c production",
    "electron:tsc": "echo 'run electron:tsc' && tsc -p src/main/tsconfig.json && yarn copy-assets && echo 'finished electron:tsc'",
    "copy-assets": "cpy package.json dist && touch dist/yarn.lock && cd src/main && cpy **/*.jpg **/*.png ../../dist/main",
    "electron:local": "yarn run electron:tsc && electron dist",
    "electron:build": "yarn run build:prod && electron-builder build --publish=never",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "yarn run build:prod && playwright test -c e2e/playwright.config.ts e2e/",
    "e2e:show-trace": "playwright show-trace e2e/tracing/trace.zip",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint",
    "format": "prettier --write ."
  },
  "pkg": {
    "targets": [
      "node-win-x64"
    ],
    "assets": [
      "src/main/collage-maker/images/**/*"
    ]
  },
  "bin": {
    "collageMaker": "src/main/tools/collageMaker-cli.js"
  },
  "dependencies": {
    "download": "^8.0.0",
    "electron-localshortcut": "^3.2.1",
    "fs-extra": "^10.1.0",
    "logger-winston": "0.0.11",
    "node-ssdp": "^3.3.0",
    "rxjs": "7.5.6",
    "sharp": "^0.30.7",
    "superagent": "^8.0.0",
    "text-to-svg": "^3.1.5",
    "wifi-control": "^2.0.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^14.0.0",
    "@angular-devkit/build-angular": "14.1.2",
    "@angular-eslint/builder": "^14.0.2",
    "@angular/animations": "^14.1.2",
    "@angular/cdk": "^14.1.2",
    "@angular/cli": "14.1.2",
    "@angular/common": "14.1.2",
    "@angular/compiler": "14.1.2",
    "@angular/compiler-cli": "14.1.2",
    "@angular/core": "14.1.2",
    "@angular/forms": "14.1.2",
    "@angular/language-service": "14.1.2",
    "@angular/material": "^14.1.2",
    "@angular/platform-browser": "14.1.2",
    "@angular/platform-browser-dynamic": "14.1.2",
    "@angular/router": "14.1.2",
    "@electron/remote": "^2.0.8",
    "@ngrx/store": "^14.1.0",
    "@ngrx/store-devtools": "^14.1.0",
    "@ngx-translate/core": "14.0.0",
    "@ngx-translate/http-loader": "7.0.0",
    "@types/jasmine": "4.0.3",
    "@types/jasminewd2": "2.0.10",
    "@types/lodash": "^4.14.184",
    "@types/node": "^16.11.26",
    "@types/sharp": "^0.30.5",
    "@types/yargs": "^17.0.11",
    "bootstrap": "^5.2.0",
    "codelyzer": "6.0.2",
    "core-js": "3.24.1",
    "cp-cli": "^2.0.0",
    "cpy-cli": "^4.1.0",
    "electron": "20.0.2",
    "electron-builder": "23.3.3",
    "eslint": "^8.22.0",
    "eslint-plugin-prettier": "^4.2.1",
    "font-awesome": "^4.7.0",
    "hammerjs": "^2.0.8",
    "jasmine-core": "4.3.0",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.1.1",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.0.0",
    "ngrx-store-localstorage": "^14.0.0",
    "ngx-bootstrap": "^9.0.0",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "npm-run-all": "4.1.5",
    "npx": "10.2.2",
    "p-event": "^5.0.1",
    "pkg": "^5.8.0",
    "prettier": "^2.7.1",
    "protractor": "7.0.0",
    "touch-cli": "^0.0.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4",
    "wait-on": "6.0.1",
    "webdriver-manager": "12.1.8",
    "yargs": "^17.5.1",
    "zone.js": "0.11.8"
  },
  "resolutions": {
    "@types/node": "^16.11.26"
  }
}
