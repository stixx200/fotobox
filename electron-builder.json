{
  "productName": "fotobox",
  "directories": {
    "output": "build-output"
  },
  "asarUnpack": [
    "src/main/**/*.jpg",
    "src/main/**/*.png"
  ],
  "files": [
    "**/*",
    "!*.ts",
    "!*.map",
    "!*.code-workspace",
    "!*.idea",
    "!LICENSE.md",
    "!package-lock.json",
    "!src/renderer/*",
    "!e2e/",
    "!hooks/",
    "!.angular-cli.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json",
    "!tools/"
  ],
  "win": {
    "icon": "renderer_dist/assets/icon",
    "target": [
      "nsis"
    ]
  },
  "mac": {
    "icon": "renderer_dist/assets/icon",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "renderer_dist/assets/icon",
    "target": [
      "AppImage"
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  }
}
