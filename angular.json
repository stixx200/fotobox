{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "fotobox": {
      "root": "",
      "sourceRoot": "src/renderer",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "dist/renderer",
            "index": "src/renderer/index.html",
            "main": "src/renderer/main.ts",
            "tsConfig": "src/renderer/tsconfig.app.json",
            "polyfills": "src/renderer/polyfills.ts",
            "assets": [
              "src/renderer/assets"
            ],
            "styles": [
              "node_modules/font-awesome/css/font-awesome.css",
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "src/renderer/styles.scss"
            ],
            "scripts": [],
            "allowedCommonJsDependencies": [
              "lodash",
              "rxjs",
              "deepmerge"
            ],
            "customWebpackConfig": {
              "path": "./angular.webpack.js",
              "replaceDuplicatePlugins": true
            }
          },
          "configurations": {
            "dev": {
              "optimization": false,
              "outputHashing": "none",
              "sourceMap": true,
              "namedChunks": false,
              "aot": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": false,
              "fileReplacements": [
                {
                  "replace": "src/renderer/environments/environment.ts",
                  "with": "src/renderer/environments/environment.dev.ts"
                }
              ]
            },
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/renderer/environments/environment.ts",
                  "with": "src/renderer/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "browserTarget": "fotobox:build"
          },
          "configurations": {
            "dev": {
              "browserTarget": "fotobox:build:dev"
            },
            "production": {
              "browserTarget": "fotobox:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "fotobox:build"
          }
        },
        "test": {
          "builder": "@angular-builders/custom-webpack:karma",
          "options": {
            "main": "src/renderer/test.ts",
            "polyfills": "src/renderer/polyfills-test.ts",
            "tsConfig": "src/renderer/tsconfig.spec.json",
            "karmaConfig": "src/renderer/karma.conf.js",
            "inlineStyleLanguage": "scss",
            "scripts": [],
            "styles": [
              "src/renderer/styles.scss"
            ],
            "assets": [
              "src/renderer/icon.ico",
              "src/renderer/assets"
            ],
            "customWebpackConfig": {
              "path": "./angular.webpack.js",
              "replaceDuplicatePlugins": true
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/renderer/**/*.ts",
              "src/renderer/**/*.html"
            ]
          }
        }
      }
    },
    "fotobox-e2e": {
      "root": "e2e",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "fotobox:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "fotobox",
  "cli": {
    "analytics": false
  }
}
